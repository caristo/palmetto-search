{
    "extends": [
      "eslint:recommended", // Good standard base of rules to use by default
      // The prettier shareable configs need to come last
      "prettier"
    ],
    "rules": {
      // My preferred rules
      "no-console": "warn",
      "no-var": "error", // preference for let and const only
      "prefer-const": "error",
      "eqeqeq": "warn" // warn to use === instead of ==
    },
    "parserOptions": {
      "ecmaVersion": 2018, 
      "sourceType": "module", 
      "parser": "babel-eslint"
    },
    "env": {
      "es6": true, 
      "browser": true,
      "node": true
    }
  }